\newcommand{\diapoI}{
	\begin{frame}
		\titlepage
	\end{frame}}
	
\newcommand{\diapoIStage}[4]{
	\begin{frame}
		\titlepage
		\vspace{-3em}
		\begin{center}
			\huge{ \maitreStage{#1}{#2}\\
			\vspace{-1em}
			\tuteurStage{#3}{#4}}
		\end{center}
	\end{frame}}
	
\newcommand{\question}{
\begin{frame}
	\begin{center}
		\iffrenchlang 
			\Huge{Des questions ???}
		 \else
		 	\Huge{Questions ???}
		 \fi 	
	\end{center}
\end{frame}}		

\newcommand{\questionYN}{
\begin{frame}
	\begin{center}
		\iffrenchlang 
			\Huge{Des questions ???}
			
			\hyperlink{questions}{\beamerbutton{OUI}}
			\hspace{.35\paperwidth}\hyperlink{finPresentation}{\beamerbutton{NON}}
		 \else
		 	\Huge{Questions ???}
		 	
		 	\hyperlink{questions}{\beamerbutton{YES}}
			\hspace{.35\paperwidth}\hyperlink{finPresentation}{\beamerbutton{NO}}
		 \fi 	
	\end{center}
\end{frame}}

